<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Forgot your Password?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <div class="field">
              <div class="control">
                <%= f.input :email,
                required: true,
                autofocus: true,
                wrapper: false, input_html: { class: "input" }, label_html: { class: "label" }%>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.button :submit, "Reset Password",class:"button is-medium is-info" %>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
